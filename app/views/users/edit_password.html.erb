<div class="card" style="width: 300px; height: 200px; margin-top: 50px; background-color: whitesmoke;">
    <%#= image_tag "login-removebg-preview.png", class:"card-img-top" , style:"height: 150px; width: 150px; align: center; margin-left: 180px; margin-top: 30px;"%>
    <div class="card-body">
        <%= form_with(scope: :user, url: user_update_password_path(@user)) do |form| %>
            <%= form.label 'New Password'%>
            <%= form.password_field :password %><br>
            <%#= label_tag 'Repeat Password'%>
            <%#= password_field_tag :password %><br>
            <%= form.submit 'Set Password' %>
        <% end %>
    </div>
</div>