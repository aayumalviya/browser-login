<style>
.btn-info {
  margin-top: 10px;
  margin-bottom: 10px;
  margin-left: 70px;
  font-family: Raleway-SemiBold;
  font-size: 18px;
  color: rgba(91, 192, 222, 0.75);
  letter-spacing: 1px;
  line-height: 15px;
  border: 2px solid rgba(91, 192, 222, 0.75);
  border-radius: 40px;
  background: transparent;
  transition: all 0.3s ease 0s;
  width: 250px;
}

.btn-info:hover {
  color: #FFF;
  background: rgba(91, 192, 222, 0.75);
  border: 2px solid rgba(91, 192, 222, 0.75);
}
</style>
<center>
<div class="card" style="width: 500px; height: 400px; margin-top: 50px; background-color: whitesmoke;">
    <%= image_tag "login-removebg-preview.png", class:"card-img-top" , style:"height: 150px; width: 150px; align: center; margin-left: 180px; margin-top: 30px;"%>
    <div class="card-body">
        <%= form_tag '/login' do %>
            <%= label_tag 'Username'%>
            <%= text_field_tag :name, params[:name] %><br>
            <br>
            <%= label_tag 'Password'%>
            <%= password_field_tag :password %></p> 

            <%= submit_tag "Log In", class: "btn btn-info" %>
                
        <% end %>
        <%= link_to 'Signup', '/signup'%>
    </div>
</div>
</center>